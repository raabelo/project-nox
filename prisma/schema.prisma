
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Addon {
  id          String   @id @default(cuid())
  
  name        String
  slug        String   @unique
  version     String
  author      String?
  description String?
  repository  String?
  enabled     Boolean  @default(false)

  createdAt   DateTime @default(now())
}
